$(function () {
    var chart;
    $(document).ready(function() {
		    Highcharts.setOptions({
				  chart: {
						style: {
							fontFamily: '"Roboto Condensed", "Lucida Grande", "Lucida Sans Unicode", Verdana, Arial, Helvetica, sans-serif',
							fontSize: '12px'
						}
					}
				});
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'top',
                type: 'line',
                marginRight: 130,
                marginBottom: 25
            },
            title: {
                text: "<%= chart_title %>",
                x: -20 //center
            },
            credits: {
                enabled: false
            },
            subtitle: {
                text: 'Source: FTA Nexus',
                x: -20
            },
            xAxis: {
                type: 'datetime',
                dateTimeLabelFormats: {
                    hour: '%H:%M'   
                }
            },
            yAxis: [{
                title: {
                    text: 'Temperatur (°C)',
                }
            }, {
                title: {
                    text: 'Luftdruck (hPa)',
                    style: {
                        color: '#89A54E'
                    }
                },
                opposite: true,
            }], 
            tooltip: {
                formatter: function() {
                        var d = new Date(this.x)
                        return '<b>'+ this.series.name +'</b><br/>'+
                        d.format("HH:MM") +' Uhr: '+ this.y +'°C';
                }
            },
            legend: {
                /* floating: true,
                verticalAlign: "top",
                align: "left",
                x: 80,
                y: 40 */
                enabled: false  
            },
            series: [{
                name: 'Temperatur - außen',
                data: <%= temp_values %>,
                pointStart: <%= start_unixtime %>, // Date.UTC(2010, 0, 1),
                pointInterval: 3600 * 1000 // one hour
            }, {
                name: 'Luftfeuchte - außen',
                color: '#89A54E',
                data: <%= humaditity_values %>,
                yAxis: 1,
                pointStart: <%= start_unixtime %>, // Date.UTC(2010, 0, 1),
                pointInterval: 3600 * 1000 // one hour
            }],
        });
    });
    
});
